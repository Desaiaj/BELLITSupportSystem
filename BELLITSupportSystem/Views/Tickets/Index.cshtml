@model BELLITSupportSystem.Models.TicketModel

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row jumbotron">
    @{
        Html.BeginForm("IssueTicket", "Tickets", FormMethod.Post);
    }
    <div class="col-md-4">
        <div class="form-group">
            @Html.TextBoxFor(m => m.ProjectName, new { @class = "form-control", @id = "ProjectName", @placeholder = "Enter Project Name" })
        </div>
        <div class="form-group">
            @{Html.RenderAction("DepartmentList");}
        </div>
        <div class="form-group" id="EmployeeList">

        </div>
    </div>
    <div class="col-md-8">
        <div class="form-group">
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @id = "Description", @placeholder = "Description", @rows = "5" })
        </div>
        <div class="form-group" style="margin-top:5px">
            <input type="button" class="btn btn-primary form-control" id="Submit" name="btnSubmit" value="Submit" />
        </div>
    </div>
    @{ Html.EndForm(); }
</div>